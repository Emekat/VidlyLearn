@using VidlyLearn.Models
@model VidlyLearn.ViewModels.MovieVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>@Html.ActionLink("NEW MOVIE", "MovieForm", "Movie", null, new { @class = "btn btn-primary" })</p>
@if (Model.Movies.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new {id = movie.Id},null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <text>We don't have any customers yet</text>
}

